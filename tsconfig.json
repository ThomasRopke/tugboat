{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "ES2023"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
  },
  "include": ["src"]
}
